{
    "manifest_version": 2,

    "name": "FeatureFinder",
    "description": "Track and analyze your favorite crypto coins as well as stocks using your own algorithms or metrics, and also get alerts.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "app.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "unlimitedStorage",
        "https://ajax.googleapis.com/",
        "https://bittrex.com/",
        "https://www.cryptocompare.com/",
        "https://coinmarketcap.com/"
    ],
    "background": {
        "page": "app.html"
    }
}